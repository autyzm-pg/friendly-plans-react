app_identifier("org.friendlyplans") # The bundle identifier of the app for iOS
package_name("org.friendlyplans") # The bundle identifier of the app for Android

apple_id("") # Your Apple email address

itc_team_id("") # App Store Connect Team ID
team_id("") # Developer Portal Team ID

for_platform :ios do
    for_lane :staging_testflight do
        app_identifier 'org.friendlyplans.staging'
    end
    for_lane :staging_appstore do
        app_identifier 'org.friendlyplans.staging'
    end
end

for_platform :android do
    for_lane :staging_googleplay_alpha do
        package_name 'org.friendlyplans.staging'
    end
    for_lane :release_googleplay_alpha do
        package_name 'org.friendlyplans.staging'
    end
end

# For more information about the Appfile, see:
#     https://docs.fastlane.tools/advanced/#appfile
